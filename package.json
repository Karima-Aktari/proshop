{
  "name": "proshop",
  "version": "1.0.0",
  "description": "eCommerce application built with the MERN stack",
  "homepage": "https://github.com/Karima-Aktari/proshop#readme",
  "bugs": {
    "url": "https://github.com/Karima-Aktari/proshop/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Karima-Aktari/proshop.git"
  },
  "license": "MIT",
  "author": "Karima Aktari",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "npm run dev --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node backend/seeder.js",
    "data:destroy": "node backend/seeder.js -d",
    "build": "npm install && npm install --prefix frontend && npm run build --prefix frontend"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.17.2",
    "bcryptjs": "^3.0.2",
    "color": "^5.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.1",
    "multer": "^2.0.2",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.2",
    "nodemon": "^3.1.10"
  }
}
